root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{cpp,h,hpp,c}]
indent_style = space
indent_size = 4

[*.{cmake,txt}]
indent_style = space
indent_size = 4

[*.{json,xml}]
indent_style = space
indent_size = 2

[*.{glsl,vert,frag,geom,comp}]
indent_style = space
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab