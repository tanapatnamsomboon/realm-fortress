# Auto detect text files and perform LF normalization
* text=auto

# Source code
*.cpp text eol=lf
*.h text eol=lf
*.hpp text eol=lf
*.c text eol=lf
*.cmake text eol=lf
*.txt text eol=lf

# Shaders
*.glsl text eol=lf
*.vert text eol=lf
*.frag text eol=lf
*.geom text eol=lf
*.comp text eol=lf

# Scripts
*.sh text eol=lf
*.bat text eol=crlf
*.ps1 text eol=crlf

# Documents
*.md text eol=lf
*.json text eol=lf
*.xml text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gltf binary
*.bin binary
*.glb binary
